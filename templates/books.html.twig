{% extends 'base.html.twig' %}
{% block content %}

    <div class="content">
        <!--la boucle qui fera apparaitre les livres sur la page-->
        {% for book in books %}

            <div class="books">
                <a href="{{ path('book_show', {'id':book.id}) }}">
                    <!--le titre du livre-->
                        <h2>{{ book.title }}</h2>
                    <!--les info du livre-->
                    <p>type : {{ book.genre.name }} - {{ book.nbPages }} pages</p>
                </a>
            </div>

        {% endfor %}
    </div>

{% endblock content %}