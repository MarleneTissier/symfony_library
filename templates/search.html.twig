{% extends 'base.html.twig' %}
{% block content %}

    <div class="content_search">

        <form action="" method="get">
            <label for="">rechercher : </label>
            <input name="search" type="text">
        </form>

        <div class="result">
            {% for book in books%}
                <div class="book">
                    <!--le titre du livre-->
                    <h2>{{ book.title }}</h2>
                    <!--le résumé du livre-->
                    <p>{{ book.resume }}</p>
                    <!--les info du livre-->
                    <p>type : {{ book.genre }} - {{ book.nbPages }} pages</p>
                </div>
            {% endfor %}
            {% if (books ==null) %}
                <div class="empty">
                    <p>Entrez une requete s'il vous plait</p>
                </div>
            {% endif %}
        </div>

    </div>

{% endblock %}

